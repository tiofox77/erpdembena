# ============================================
# OPCACHE CONFIGURATION FOR .env
# ============================================
# Add these to your .env file

# OPcache Settings
OPCACHE_ENABLED=true
OPCACHE_ENABLE_CLI=false
OPCACHE_VALIDATE_TIMESTAMPS=true  # Set to false in production for max performance
OPCACHE_REVALIDATE_FREQ=2  # Seconds between timestamp checks (60 in production)

# Monitoring
OPCACHE_MONITORING_ENABLED=true
OPCACHE_LOG_LOW_HIT_RATE=true
OPCACHE_HIT_RATE_THRESHOLD=80

# Development vs Production
# For DEVELOPMENT:
# OPCACHE_VALIDATE_TIMESTAMPS=true
# OPCACHE_REVALIDATE_FREQ=2

# For PRODUCTION:
# OPCACHE_VALIDATE_TIMESTAMPS=false
# OPCACHE_REVALIDATE_FREQ=60
